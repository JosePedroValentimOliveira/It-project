<%- contentFor('title') %>
<title>Registreren</title>

<%- contentFor('header') %>
<div class="buttons">
<button class="a-button-negative" onclick="location.href='/'">Homepage</button>
<button class="a-button-negative" onclick="location.href='/locaties'">Locaties</button>
<button class="a-button-negative" onclick="location.href='/contact'">Contact</button>
<button class="a-button-negative" onclick="location.href='/favorieten'">Favorieten</button></div>
<%- contentFor('main') %>
<div id="form">
  <h1>Registreren</h1>
  <%- include('./partials/messages.ejs'); %>
  <form action="/register" method="POST">
    <div>
      <label class="a-input__label a-input__label--inline-block" for="firstname">Naam</label>
      <input type="text" name="firstname" id="firstname" placeholder="Enter Name"
        value="<%= typeof firstname != 'undefined' ? firstname : '' %>">
    </div>
    <div>
      <label class="a-input__label a-input__label--inline-block" for="lastname">Achternaam</label>
      <input type="text" name="lastname" id="lastname" placeholder="Enter Lastname"
        value="<%= typeof lastname != 'undefined' ? lastname : '' %>"><br>
    </div>
    <div>
      <label class="a-input__label a-input__label--inline-block" for="email">E-mail</label>
      <input type="email" name="email" id="email" placeholder="Enter Email"
        value="<%=typeof email != 'undefined' ? email : ''%>"><br>
    </div>
    <div>
      <label class="a-input__label a-input__label--inline-block" for="password">Wachtwoord</label>
      <input type="password" name="password" id="password" placeholder="Enter Password"
        value="<%=typeof email != 'undefined' ? password : ''%>"><br>
    </div>
    <div>
      <label class="a-input__label a-input__label--inline-block" for="passwordconfirm">Confirmeer wachtwoord</label>
      <input type="password" name="passwordconfirm" id="passwordconfirm" placeholder="Confirm Password"
        value="<%= typeof email != 'undefined' ? passwordconfirm : ''%>"><br>
    </div>

    <button type="submit" class="a-button has-icon-right">
      <span class="fa fa-arrow-right"></span>
      Registreer
    </button><br>

  </form>

  <p>Al een account? <a href="/login">Login</a></p>



</div>
<%- contentFor('css') %>

<link rel="stylesheet" href="./css/form.css">
  
<%- contentFor('scripts') %>